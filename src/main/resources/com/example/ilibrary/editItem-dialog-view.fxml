<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="250.0" minWidth="-Infinity" prefHeight="359.0" prefWidth="288.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="Item code:" />
        <Label fx:id="itemCodeLabel" prefHeight="18.0" prefWidth="223.0" />
        <Label text="Title:" />
        <TextField fx:id="titleTextField" />
        <Label text="Author:" />
        <TextField fx:id="authorTextField" />
      <RadioButton fx:id="availableButton" mnemonicParsing="false" prefHeight="18.0" prefWidth="229.0" text="  Available">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </RadioButton>
        <Label fx:id="warningLabel" prefHeight="18.0" prefWidth="242.0" textFill="#ef5050">
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </Label>
        <HBox prefHeight="72.0" prefWidth="227.0" spacing="20.0">
            <children>
                <Button fx:id="editItemButton" mnemonicParsing="false" onAction="#onEditItemClick" prefHeight="26.0" prefWidth="115.0" style="-fx-background-color: #58d310; -fx-cursor: hand;" text="Edit item" textFill="WHITE" />
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelClick" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #dd000d; -fx-cursor: hand;" text="Cancel" textFill="WHITE" />
            </children>
        </HBox>
    </children>
</VBox>
